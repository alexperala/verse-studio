---
import BaseLayout from "../layouts/BaseLayout.astro";
import ThreeIrisBG from "../components/ThreeIrisBG.jsx";
---
<BaseLayout title="Verse Studio — New creative media studio (AI-first)">
  {/* Full-screen 3D background */}
  <ThreeIrisBG client:load />

  {/* Overlay content */}
  <section class="overlay">
    <div class="panel panel--hero">
      <p class="kicker">New creative media studio</p>
      <h1 class="hero-title">
        Human vision × <span style="color:var(--blue-2)">AI computation</span>
      </h1>
      <p class="hero-sub">
        Verse Studio blends artistry, optics, and generative tools to craft filmic visuals,
        immersive sound, and intelligent media systems. We are <strong>AI-first</strong>, human-led,
        and relentlessly design-driven.
      </p>
      <div class="ctas">
        <a
          class="btn btn-primary"
          href="https://morning-news-update.podbean.com/"
          rel="noopener noreferrer"
          target="_blank"
        >
          <svg class="icon" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
            <path d="M8 5v14l11-7z" />
          </svg>
          Listen: Morning News Update
        </a>
        <a class="btn" href="mailto:info@verse-studio.com">
          <svg class="icon" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
            <path d="M20 4H4a2 2 0 00-2 2v12a2 2 0 002 2h16a2 2 0 002-2V6a2 2 0 00-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z" />
          </svg>
          Work with Verse Studio
        </a>
      </div>
    </div>

    <div class="panels-grid">
      <div class="panel">
        <span class="badge">AI-powered Podcast</span>
        <h3 style="margin:10px 0 6px">Morning News Update</h3>
        <p style="color:#c7cfdb; max-width:60ch">
          Our first live release: a fast, daily news podcast powered by advanced speech synthesis
          and automated editorial pipelines. Built to sound human—because the vision behind it is.
        </p>
        <p style="margin-top:12px">
          <a
            class="btn btn-primary"
            href="https://morning-news-update.podbean.com/"
            target="_blank"
            rel="noopener noreferrer"
          >
            Visit Podcast
          </a>
        </p>
      </div>
      <div class="panel">
        <span class="badge">YouTube</span>
        <div class="video-wrap">
          <iframe
            src="https://www.youtube-nocookie.com/embed/1U0iUzdj2bA?rel=0"
            title="Verse Studio — YouTube Video 1"
            loading="lazy"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
            allowfullscreen
            referrerpolicy="strict-origin-when-cross-origin"
          ></iframe>
        </div>
      </div>
      <div class="panel">
        <span class="badge">YouTube</span>
        <div class="video-wrap">
          <iframe
            src="https://www.youtube-nocookie.com/embed/J1kbzwG4QRU?rel=0"
            title="Verse Studio — YouTube Video 2"
            loading="lazy"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
            allowfullscreen
            referrerpolicy="strict-origin-when-cross-origin"
          ></iframe>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .video-wrap {
    position: relative;
    width: 100%;
    aspect-ratio: 16 / 9;
    border-radius: 12px;
    overflow: hidden;
    background: #000;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.35);
    margin-top: 8px;
  }
  .video-wrap iframe {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    border: 0;
  }
</style>
